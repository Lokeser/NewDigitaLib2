@model DigitalLib.Models.Aluguel

@{
    ViewData["Title"] = "Criar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Novo aluguel</h1>

<h4>Insira as informações abaixo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label>Livros</label>
                <div>
                    @if ((IEnumerable<dynamic>)ViewBag.Livros != null)
                    {
                        @foreach (var livro in (IEnumerable<dynamic>)ViewBag.Livros)
                        {
                            <div>
                                <input type="checkbox" name="LivrosSelecionados" value="@livro.Id" />
                                <label>@livro.Titulo</label>
                            </div>
                        }
                    }
                    else
                    {
                        <p>Não possuímos livros cadastrados.</p>
                    }

                </div>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label">Nome do cliente</label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
                    <option>Selecione o cliente</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DataEmprestimo" class="control-label">Data empréstimo</label>
                <input asp-for="DataEmprestimo" class="form-control"/>
                <span asp-validation-for="DataEmprestimo" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:10px;">
                <label asp-for="DataDevolucao" class="control-label">Data devolução</label>
                <input asp-for="DataDevolucao" class="form-control" />
                <span asp-validation-for="DataDevolucao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index"
                   class="btn btn-secondary"
                   data-toggle="tooltip"
                   title="Voltar">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z" />
                    </svg>
                    <span>Voltar</span>
                </a>
                <button type="submit" class="btn" data-toggle="tooltip" style="background-color:#c8ad7f;color:white;" title="Salvar">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                        <path d="m10.97 4.97-.02.022-3.473 4.425-2.093-2.094a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05" />
                    </svg>
                    <span>Salvar</span>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}